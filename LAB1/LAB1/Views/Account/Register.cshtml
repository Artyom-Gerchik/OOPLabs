@model RegisterModel

<h2>Register</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Email">Email</label><br/>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Name">Name</label><br/>
            <input type="text" asp-for="Name"/>
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Surname">Surname</label><br/>
            <input type="text" asp-for="Surname"/>
            <span asp-validation-for="Surname"></span>
        </div>
        <div>
            <label asp-for="Patronymic">Patronymic</label><br/>
            <input type="text" asp-for="Patronymic"/>
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber">Phone Number</label><br/>
            <input asp-for="PhoneNumber"/>
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div>
            <label asp-for="Password">Password</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm Password</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Register Now!"/>
        </div>
    </div>
</form>