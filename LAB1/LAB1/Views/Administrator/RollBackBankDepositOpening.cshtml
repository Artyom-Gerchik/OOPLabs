@model LAB1.Models.Administrator.AdministratorRollBackBankDepositOpeningModel
<h4>RollBack Deposit Opening</h4>
<form asp-action="RollBackBankDepositOpening" asp-controller="Administrator" asp-anti-forgery="true" method="post">
    <div class="validation" asp-validation-summary="All"></div>
    <br>
    <hr class="style1">
    <br>
    <br>

    @foreach (var opennedDeposit in Model.Administrator.OpennedDepositsToRollBack)
    {
        <table class="table table-hover table-dark">
            <tbody>
            <tr>
                <th scope="row">Client Name</th>
                <td>@opennedDeposit.Client!.Name</td>
            </tr>
            <tr>
                <th scope="row">Bank Deposit Name</th>
                <td>@opennedDeposit.BankDeposit!.Name</td>
            </tr>
            <tr>
                <th scope="row">Amount Of Money</th>
                <td>@opennedDeposit.BankDeposit!.AmountOfMoney.ToString()</td>
            </tr>
            </tbody>
        </table>
    }

    <br>
    <br>
    <hr class="style1">
    <br>


    @if (Model.Administrator.OpennedDepositsToRollBack!.Count != 0)
    {
        <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01" asp-for="@Model!.SelectedDepositId">
                <option selected>Choose Bank Deposit</option>
                @foreach (var opennedDeposit in Model.Administrator.OpennedDepositsToRollBack)
                {
                    <option value="@opennedDeposit.BankDeposit!.Id">@opennedDeposit.Client!.Name - @opennedDeposit.BankDeposit!.Name</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn"/>
            </div>
        </div>
    }
</form>